@model WebApplication1lab.Models.Movie

@{
    ViewData["Title"] = "Buy";
}

<div class="container mt-5">
    <h1 class="display-4">Покупка</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title, @Model.Price ГРН, @Model.Duration</h4>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Buy" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input hidden name="MovieInfo" value="@Model" />

                        <div class="form-group">
                            <label for="person" class="control-label">Введіть своє і'мя'</label>
                            <input type="text" class="form-control" id="person" name="person" required />
                            <div class="invalid-feedback">Please enter your name.</div>
                        </div>

                        <div class="form-group">
                            <label for="address" class="control-label">Введіть вашу ел.почту</label>
                            <input type="text" class="form-control" id="address" name="address" required />
                            <div class="invalid-feedback">Please enter your location.</div>
                        </div>

                        <div class="form-group p-2">
                            <button type="submit" class="btn btn-primary">Замовити</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Повернутись до списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
